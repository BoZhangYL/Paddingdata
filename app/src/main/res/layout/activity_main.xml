<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/paddingbackground"
    tools:context="bo.com.paddingdata.MainActivity">

    <Button
        android:id="@+id/more_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/perfs"
        android:text="@string/factory_reset_padding"
        android:textColor="#aaaaaa"
        android:textStyle="bold"
        android:textSize="20sp"
        android:elevation="10dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/pading_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/perf"
        android:text="@string/performance_data_padding"
        android:textColor="#aaaaaa"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_above="@+id/more_button"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
